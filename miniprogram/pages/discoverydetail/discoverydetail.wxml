<!--pages/discoverydetail/discoverydetail.wxml-->
<view class="content">
  <view class="topbar">
    <view class="user">
        <image src="{{discoverydetail.userimage}}" style="height:68rpx; width:68rpx" mode="aspectFill"></image>
      <text>{{discoverydetail.user}}</text>
    </view>
    <view class="plus" bindtap="follow">
      <image src="/images/icon/plus.png" style="height: 24rpx;width: 24rpx"></image>
      <text>关注</text>
    </view>
  </view>
  <view class="detailinfo">
    <image src="{{discoverydetail.image}}" style="width: 750rpx" mode="widthFix"></image>
    <view style="height:28rpx;width:750rpx"></view>
    <view class="title">{{discoverydetail.title}}</view>
    <view style="height:32rpx;width:750rpx"></view>
    <block wx:for="{{discintro}}" wx:key="index">
      <view class="intro">{{item}}</view>
      <view style="height:32rpx;width:750rpx"></view>
    </block>
  </view>
  <view style="height:32rpx;width:750rpx"></view>
</view>